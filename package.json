{
  "name": "next-boilerplate",
  "description": "A simple Next.js boilerplate",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "author": "Gusttavo Castro (castrogusttavo)",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "typescript",
    "boilerplate"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "deno run -A npm:@biomejs/biome lint --write",
    "format": "deno run -A npm:@biomejs/biome format --write",
    "format:check": "deno run -A npm:@biomejs/biome check --write",
    "prepare": "husky"
  },
  "dependencies": {
    "dotenv": "16.4.7",
    "next": "15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "10.4.20",
    "husky": "9.1.7",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}